<Window x:Class="WpfAndOOP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAndOOP"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="lb" HorizontalAlignment="Left" Height="399" Margin="10,10,0,0" VerticalAlignment="Top" Width="197" SelectionChanged="lb_SelectionChanged"/>
        <Button x:Name="newBtn" Content="Button" HorizontalAlignment="Left" Margin="212,10,0,0" VerticalAlignment="Top" Width="75" Click="newBtn_Click"/>
        <TextBox x:Name="aTb" HorizontalAlignment="Left" Height="23" Margin="212,35,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="bTb" HorizontalAlignment="Left" Height="23" Margin="212,63,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="cTb" HorizontalAlignment="Left" Height="23" Margin="212,91,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="saveBtn" Content="Button" HorizontalAlignment="Left" Margin="292,10,0,0" VerticalAlignment="Top" Width="75" Click="saveBtn_Click"/>

    </Grid>
</Window>
